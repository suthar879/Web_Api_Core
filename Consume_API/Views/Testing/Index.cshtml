@model IEnumerable<Test_API.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <partial name="_NotificationPartial" />
            <a class="btn btn-sm btn-primary float-end" asp-action="AddCustomer" asp-controller="Testing">Create Customer</a>
            <table class="table table-bordered table-striped table-hover">
                <thead class="bg-dark text-center text-light">
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            gender
                        </th>
                        <th>
                            IsActive
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model.Count() > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.gender
                                </td>
                                <td>
                                    @item.IsActive
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Testing" asp-route-id="@item.Id">Edit</a> |
                                    <a class="btn btn-sm btn-danger" onclick="return confirm('Are You Sure? You Want to Delete');" asp-action="Delete" asp-controller="Testing" asp-route-id="@item.Id">Delete</a> |
                                    <a class="btn btn-sm btn-warning" asp-action="" asp-controller="" asp-route-id="@item.Id">Details</a> |
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="text-center">
                            <td colspan="5" class="text-warning bg-info">No Records</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

